<?xml version="1.0" encoding="UTF-8"?>
<theme>
    <formatVersion>7</formatVersion>
    <include>./_inc/ui-components/theme-config.xml</include>
    <include>./_inc/ui-components/theme-variables.xml</include>
    <view name="splash">
        <splash name="splash">
            <backgroundColor>000000</backgroundColor>
        </splash>
        <image name="background">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <linearSmooth>true</linearSmooth>
            <saturation>0.75</saturation>
            <path>./_inc/other/${splashBackground}</path>
        </image>
        <image name="progressbar">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.5</pos>
            <color>${splashProgressbarColor}30</color>
            <colorEnd>${splashProgressbarColor}30</colorEnd>
        </image>
        <image name="progressbar:active">
            <color>${splashProgressbarColor}</color>
            <colorEnd>${splashProgressbarColor}</colorEnd>
        </image>
        <text name="label">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.6</pos>
            <alignment>center</alignment>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            <fontSize>0.04</fontSize>
            <color>${splashProgressbarColor}</color>
            <forceUppercase>true</forceUppercase>
        </text>
    </view>
</theme>
