<?xml version="1.0" encoding="UTF-8"?>
<!-- This component defines the bottom bar of all screens except the "system" view.

There is also a slight transparent overlay, to make the background art less intrusive.

In "system" view, the bottom bar is already integrated within another image. It might change in the
future.
-->
<theme>
    <formatVersion>7</formatVersion>
    <view name="basic, detailed, grid">
        <image name="gamelist-bottom-bar" extra="true">
            <origin>0 0</origin>
            <pos>0 0</pos>
            <size>1 1</size>
            <path>./_inc/other/${bottomBarImage}</path>
            <zindex>2</zindex>
            <linearSmooth>true</linearSmooth>
        </image>
    </view>
</theme>
