<?xml version="1.0" encoding="UTF-8"?>
<!-- This component defines the left half of the screen in "basic" view.

It only displays the system logo at the center.
-->
<theme>
    <formatVersion>7</formatVersion>
    <view name="basic">
        <image name="logo">
            <origin>0.5 0.5</origin>
            <linearSmooth>true</linearSmooth>
            <path>./_inc/logos/${system.theme}.webp</path>
            <zIndex>11</zIndex>
            <visible>true</visible>
            <pos>0.27 0.5</pos>
            <maxSize>0.35 0.70</maxSize>
        </image>
    </view>
</theme>
