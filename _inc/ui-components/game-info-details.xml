<?xml version="1.0" encoding="UTF-8"?>
<!-- This component defines the left half of the screen in "detailed" and "grid" views.

It displays a mixin of the game images, above the game metadata.
-->
<theme>
    <formatVersion>7</formatVersion>
    <view name="detailed, grid">
        <image name="game-metadata-background-image-extended" extra="true">
            <origin>0 0</origin>
            <path>./_inc/other/${gameDetailsPanelImage}</path>
            <pos>0 0</pos>
            <size>1 1</size>
            <zIndex>11</zIndex>
        </image>
        <image name="logo">
            <path>./_inc/system-logo/${system.theme}.webp</path>
            <origin>0.5 0.5</origin>
            <linearSmooth>true</linearSmooth>
            <pos>0.25 0.895</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.195 .135</maxSize>
            <saturation>0.75</saturation>
            <opacity>0.6</opacity>
            <zIndex>11</zIndex>
        </image>
        <text name="logoText">
            <forceUppercase>true</forceUppercase>
            <lineSpacing>1</lineSpacing>
            <alignment>center</alignment>
            <verticalAlignment>center</verticalAlignment>
            <origin>0.5 0.5</origin>
            <pos>0.2495 0.895</pos>
            <fontSize>0.036</fontSize>
            <glowColor>fafafaff</glowColor>
            <multiline>true</multiline>
            <glowSize>2</glowSize>
            <size>0.3 0.135</size>
            <padding>0.04 0 0.04 0</padding>
            <glowOffset>0 0</glowOffset>
            <horizontalAlignment>center</horizontalAlignment>
            <fontPath>./_inc/fonts/ChangaOne-Italic.ttf</fontPath>
            <color>111111ff</color>
        </text>
        <image name="md_marquee">
            <origin>0.5 0</origin>
            <pos>0.42 0.015</pos>
            <maxSize>0.21 0.16</maxSize>
        </image>
        <image name="md_image">
            <pos>0.27 0.21</pos>
            <origin>0.5 0.5</origin>
            <zIndex>11</zIndex>
            <maxSize>0.35 0.35</maxSize>
        </image>
        <image name="md_thumbnail">
            <pos>0.125 0.40</pos>
            <origin>0.5 1</origin>
            <maxSize>0.15 0.25</maxSize>
        </image>
        <text name="md_name">
            <origin>0 0</origin>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            <color>${gameMetadataColor}</color>
            <lineSpacing>1</lineSpacing>
            <value>Unknown</value>
            <fontSize>0.024</fontSize>
            <autoScroll>horizontal</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>1000</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
            <pos>0.05 0.437</pos>
            <size>0.471 0.024</size>
            <fontSize>0.024</fontSize>
            <lineSpacing>1</lineSpacing>
            <alignment>left</alignment>
        </text>
        <rating name="md_rating">
            <origin>0.5 0.5</origin>
            <filledPath>./_inc/icons/icon-star-filled.svg</filledPath>
            <unfilledPath>./_inc/icons/icon-star-unfilled.svg</unfilledPath>
            <color>${gameMetadataColor}</color>
            <pos>0.087 0.506</pos>
            <size>0 0.0375</size>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            <fontSize>0.024</fontSize>
            <lineSpacing>1</lineSpacing>
            <alignment>left</alignment>
        </rating>
        <text name="md_genre">
            <value>Unknown</value>
            <origin>0 0.5</origin>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            <color>${gameMetadataColor}</color>
            <lineSpacing>1</lineSpacing>
            <pos>0.188 0.507</pos>
            <size>0.332 0.024</size>
            <fontSize>0.024</fontSize>
            <alignment>left</alignment>
            <autoScroll>horizontal</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>1000</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
        </text>
        <datetime name="md_releasedate">
            <value>Unknown</value>
            <origin>0 0.5</origin>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            <color>${gameMetadataColor}</color>
            <lineSpacing>1</lineSpacing>
            <fontSize>0.024</fontSize>
            <pos>0.05 0.564</pos>
            <size>0.095 0.024</size>
            <format>%Y-%m-%d</format>
            <alignment>left</alignment>
            <autoScroll>horizontal</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>1000</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
        </datetime>
        <text name="md_developer">
            <value>Unknown</value>
            <origin>0 0.5</origin>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            <color>${gameMetadataColor}</color>
            <lineSpacing>1</lineSpacing>
            <pos>0.188 0.564</pos>
            <size>0.185 0.024</size>
            <fontSize>0.024</fontSize>
            <alignment>left</alignment>
            <autoScroll>horizontal</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>1000</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
        </text>
        <datetime name="md_lastplayed">
            <value>Never</value>
            <origin>0 0.5</origin>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            <color>${gameMetadataColor}</color>
            <lineSpacing>1</lineSpacing>
            <fontSize>0.024</fontSize>
            <pos>0.415 0.564</pos>
            <size>0.105 0.024</size>
            <alignment>left</alignment>
            <autoScroll>horizontal</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>1000</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
        </datetime>
        <text name="md_players">
            <value>Unknown</value>
            <origin>0 0.5</origin>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            <color>${gameMetadataColor}</color>
            <lineSpacing>1</lineSpacing>
            <pos>0.05 0.621</pos>
            <size>0.095 0.024</size>
            <fontSize>0.024</fontSize>
            <alignment>left</alignment>
            <autoScroll>horizontal</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>1000</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
        </text>
        <text name="md_publisher">
            <value>Unknown</value>
            <origin>0 0.5</origin>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            <color>${gameMetadataColor}</color>
            <lineSpacing>1</lineSpacing>
            <pos>0.188 0.621</pos>
            <size>0.185 0.024</size>
            <fontSize>0.024</fontSize>
            <alignment>left</alignment>
            <autoScroll>horizontal</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>1000</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
        </text>
        <text name="md_gametime">
            <value>Never</value>
            <origin>0 0.5</origin>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            <color>${gameMetadataColor}</color>
            <lineSpacing>1</lineSpacing>
            <fontSize>0.024</fontSize>
            <pos>0.415 0.621</pos>
            <size>0.105 0.024</size>
            <alignment>left</alignment>
            <autoScroll>horizontal</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>1000</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
        </text>
        <text name="md_description">
            <origin>0 0</origin>
            <fontPath>./_inc/fonts/Gilroy-Regular.ttf</fontPath>
            <autoScroll>vertical</autoScroll>
            <autoScrollSpeed>70</autoScrollSpeed>
            <autoScrollDelay>5000</autoScrollDelay>
            <color>${gameMetadataColor}</color>
            <pos>0.033 0.667</pos>
            <size>0.485 0.1125</size>
            <fontSize>0.024</fontSize>
            <lineSpacing>1.2</lineSpacing>
        </text>
    </view>
</theme>
