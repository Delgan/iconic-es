<theme>
    <formatVersion>7</formatVersion>
    <view name="system">
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <origin>0 0.5</origin>
            <pos>0 0.94</pos>
            <size>1 0.119444444444444</size>
            <logoSize>0.18229166666 0.12407407407</logoSize>
            <color>ffffff00</color>
            <colorEnd>ffffff</colorEnd>
            <gradientType>vertical</gradientType>
            <logoScale>1.2</logoScale>
            <minLogoOpacity>0.4</minLogoOpacity>
            <logoPos>0.13640625 0</logoPos>
            <logoAlignment>center</logoAlignment>
            <systemInfoDelay>8</systemInfoDelay>
            <defaultTransition>instant</defaultTransition>
        </carousel>
        <image name="background-art" extra="true">
            <path>./_inc/system-background-art/${system.theme}.webp</path>
            <size>1 1</size>
        </image>
        <image name="logo">
            <path>./_inc/system-logo/${system.theme}.webp</path>
        </image>
        <image name="system-image" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.2328125 .23</pos>
            <size>.28 0</size>
            <path>./_inc/controllers/${system.theme}.webp</path>
            <zIndex>15</zIndex>
        </image>
        <image name="system-carousel-selector-shadow" extra="true">
            <origin>0.5 0</origin>
            <pos>0.2328125 -.1</pos>
            <size>0.349125 1.1</size>
            <path>./_inc/other/system-carousel-selector-shadow.png</path>
            <zindex>2</zindex>
        </image>
        <image name="system-carousel-selector" extra="true">
            <origin>0.5 0</origin>
            <pos>0.2328125 0</pos>
            <size>0.325434375 1</size>
            <path>./_inc/other/system-carousel-selector-light.svg</path>
            <zindex>3</zindex>
        </image>
        <text name="systemInfo">
            <origin>0.5 0.5</origin>
            <pos>0.2328125 0.586</pos>
            <size>0.390625 0.022703703703704</size>
            <fontSize>0.022703703703704</fontSize>
            <color>a0a0a0</color>
            <alignment>center</alignment>
            <lineSpacing>1</lineSpacing>
            <forceUppercase>true</forceUppercase>
            <zIndex>15</zIndex>
        </text>
        <text name="system-name" extra="true">
            <text>${system.fullName}</text>
            <origin>0.5 0.5</origin>
            <pos>0.2328125 0.478</pos>
            <fontSize>0.034</fontSize>
            <alignment>center</alignment>
            <forceUppercase>true</forceUppercase>
            <color>54585a</color>
            <zIndex>15</zIndex>
        </text>
        <text name="system-year-type" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.2328125 0.518</pos>
            <fontSize>$0.022703703703704</fontSize>
            <text>9999 Â· Console</text>
            <alignment>center</alignment>
            <forceUppercase>true</forceUppercase>
            <color>54585a</color>
            <zIndex>15</zIndex>
        </text>
        <text name="system-description" extra="true">
            <origin>0.5 0</origin>
            <pos>0.2328125 0.615</pos>
            <size>0.273125 0.23</size>
            <fontSize>0.022703703703704</fontSize>
            <text>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam pulvinar ut dui eget viverra.</text>
            <verticalAlignment>top</verticalAlignment>
            <alignment>center</alignment>
            <autoScroll>vertical</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>5000</autoScrollDelay>
            <color>54585a</color>
            <zIndex>15</zIndex>
        </text>
        <helpsystem name="help">
            <origin>1 1</origin>
            <pos>0.936 0.994</pos>
            <fontSize>0.025</fontSize>
            <entrySpacing>0.0042</entrySpacing>
            <textColor>54585a</textColor>
            <iconColor>514689</iconColor>
        </helpsystem>
    </view>
    <view name="basic"></view>
    <view name="detailed"></view>
    <view name="video"></view>
</theme>
