<?xml version="1.0" encoding="UTF-8"?>
<!--
Theme Name: Iconic (ES version)
Version:    0.0.1
Author:     Delgan
License:    CC0 1.0
Based on:   Iconic (ES-DE version) by Siddy212
-->
<theme>
    <formatVersion>7</formatVersion>
    <subset name="color-scheme" displayName="Color Scheme">
        <include name="light" displayName="Light" />
        <include name="dark" displayName="Dark" />
    </subset>
    <subset name="metadata-source" displayName="Metadata Source">
        <include name="theme" displayName="Theme" />
        <include name="es" displayName="EmulationStation" />
    </subset>
    <variables ifSubset="color-scheme:dark">
        <systemBackgroundGradientImage>background-art-gradient-dark.svg</systemBackgroundGradientImage>
        <systemCarouselSelectorImage>system-carousel-selector-dark.svg</systemCarouselSelectorImage>
        <systemInfoColor>cccccc</systemInfoColor>
        <helpTextColor>999999</helpTextColor>
        <helpIconColor>999999</helpIconColor>
    </variables>
    <variables ifSubset="color-scheme:light">
        <systemBackgroundGradientImage>background-art-gradient-light.svg</systemBackgroundGradientImage>
        <systemCarouselSelectorImage>system-carousel-selector-light.svg</systemCarouselSelectorImage>
        <systemInfoColor>555555</systemInfoColor>
        <helpTextColor>616161</helpTextColor>
        <helpIconColor>616161</helpIconColor>
    </variables>
    <!-- Set default description and cart size when none is available. -->
    <variables>
        <systemDescription>View and play ${system.fullName}.</systemDescription>
        <systemCoverSize>1-1</systemCoverSize>
        <systemCartSize>1-1</systemCartSize>
    </variables>
    <!-- Built-in metadata is used as fallback when source is "Theme". -->
    <include ifSubset="metadata-source:theme">./_inc/metadata/_builtin.xml</include>
    <!-- Load "Theme" metadata (required in "EmulationStation" mode to retrieve description). -->
    <include>./_inc/metadata/${system.theme}.xml</include>
    <!-- Built-in metadata override theme metadata when source is "EmulationStation". -->
    <include ifSubset="metadata-source:es">./_inc/metadata/_builtin.xml</include>
    <view name="screen">
        <controllerActivity name="controllerActivity">
            <visible>false</visible>
        </controllerActivity>
        <batteryIndicator name="batteryIndicator">
            <visible>false</visible>
        </batteryIndicator>
        <text name="clock">
            <pos>1 1</pos>
        </text>
    </view>
    <view name="system,basic,detailed">
        <stackpanel name="system-indicators" extra="true">
            <h>0.022</h>
            <pos>-0.0075 0.965</pos>
            <orientation>horizontal</orientation>
            <reverse>true</reverse>
            <clock name="system-clock">
                <color>${helpTextColor}</color>
                <fontSize>0.022</fontSize>
                <lineSpacing>1</lineSpacing>
                <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            </clock>
            <batteryText name="system-battery-text">
                <color>${helpTextColor}</color>
                <fontSize>0.022</fontSize>
                <lineSpacing>1</lineSpacing>
                <fontPath>./_inc/fonts/Gilroy-Regular.ttf</fontPath>
            </batteryText>
            <batteryIcon name="system-battery-icon">
                <maxSize>1 1</maxSize>
                <color>${helpIconColor}</color>
                <full>./_inc/other/battery-icon-100.svg</full>
                <at75>./_inc/other/battery-icon-75.svg</at75>
                <at50>./_inc/other/battery-icon-50.svg</at50>
                <at25>./_inc/other/battery-icon-25.svg</at25>
                <empty>./_inc/other/battery-icon-0.svg</empty>
                <incharge>./_inc/other/battery-icon-charging.svg</incharge>
            </batteryIcon>
            <networkIcon name="system-network-icon">
                <maxSize>1 1</maxSize>
                <color>${helpIconColor}</color>
                <networkIcon>./_inc/other/network-icon-on.svg</networkIcon>
                <planemodeIcon>./_inc/other/network-icon-off.svg</planemodeIcon>
            </networkIcon>
        </stackpanel>
    </view>
    <view name="system">
        <stackpanel name="system-indicators" extra="true">
            <w>1</w>
            <separator>0.012</separator>
            <zIndex>100</zIndex>
        </stackpanel>
    </view>
    <view name="system">
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <origin>0 1</origin>
            <pos>0 1</pos>
            <size>1 0.2</size>
            <logoSize>0.2 0.2</logoSize>
            <color>ffffff00</color>
            <colorEnd>ffffff00</colorEnd>
            <gradientType>vertical</gradientType>
            <logoScale>1.6</logoScale>
            <minLogoOpacity>0.5</minLogoOpacity>
            <maxLogoCount>4</maxLogoCount>
            <logoPos>0.15 0</logoPos>
            <systemInfoDelay>0</systemInfoDelay>
            <defaultTransition>instant</defaultTransition>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
        </carousel>
        <image name="background-art" extra="true">
            <default>./_inc/system-background-art/_default.webp</default>
            <path>./_inc/system-background-art/${system.theme}.webp</path>
            <size>1 1</size>
        </image>
        <image name="background-art-gradient" extra="true">
            <path>./_inc/other/${systemBackgroundGradientImage}</path>
            <origin>0 0</origin>
            <zIndex>20</zIndex>
            <pos>0 0.82</pos>
            <size>1 0.22</size>
        </image>
        <image name="logo">
            <path>./_inc/system-logo/${system.theme}.webp</path>
        </image>
        <text name="logoText">
            <forceUppercase>true</forceUppercase>
            <fontSize>0.045</fontSize>
            <fontPath>./_inc/fonts/Oxygen-Regular.ttf</fontPath>
            <color>${systemInfoColor}</color>
        </text>
        <image name="system-image" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.25 .23</pos>
            <size>.24 0</size>
            <default>./_inc/controllers/_default.webp</default>
            <path>./_inc/controllers/${system.theme}.webp</path>
            <zIndex>15</zIndex>
        </image>
        <image name="system-carousel-selector-shadow" extra="true">
            <origin>0.5 0</origin>
            <pos>0.25 -.1</pos>
            <size>0.280 1.1</size>
            <path>./_inc/other/system-carousel-selector-shadow.png</path>
            <zindex>2</zindex>
        </image>
        <image name="system-carousel-selector" extra="true">
            <origin>0.5 0</origin>
            <pos>0.25 0</pos>
            <size>0.261 1</size>
            <path>./_inc/other/${systemCarouselSelectorImage}</path>
            <zindex>3</zindex>
        </image>
        <text name="system-name" extra="true">
            <text>${systemName}</text>
            <origin>0.5 0.5</origin>
            <pos>0.25 0.478</pos>
            <size>0.255 0.05</size>
            <autoScrollSpeed>25</autoScrollSpeed>
            <autoScrollDelay>0</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
            <fontSize>0.036777777777778</fontSize>
            <alignment>center</alignment>
            <forceUppercase>true</forceUppercase>
            <color>54585a</color>
            <zIndex>15</zIndex>
            <color>${systemInfoColor}</color>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
        </text>
        <text name="systemInfo">
            <origin>0.5 0.5</origin>
            <pos>0.25 0.586</pos>
            <size>0.255 0.024</size>
            <autoScrollSpeed>25</autoScrollSpeed>
            <autoScrollDelay>0</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
            <fontSize>0.024</fontSize>
            <color>a0a0a0</color>
            <alignment>center</alignment>
            <lineSpacing>1</lineSpacing>
            <forceUppercase>true</forceUppercase>
            <zIndex>15</zIndex>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
        </text>
        <text name="system-year-type" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.25 0.518</pos>
            <fontSize>0.024</fontSize>
            <size>0.255 0.05</size>
            <autoScrollSpeed>25</autoScrollSpeed>
            <autoScrollDelay>0</autoScrollDelay>
            <singleLineScroll>true</singleLineScroll>
            <text if="${systemReleaseYear} > 0">${systemReleaseYear} Â· ${systemHardwareType}</text>
            <text if="!(${systemReleaseYear} > 0)">${systemHardwareType}</text>
            <alignment>center</alignment>
            <forceUppercase>true</forceUppercase>
            <color>${systemInfoColor}</color>
            <zIndex>15</zIndex>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
        </text>
        <text name="system-description" extra="true">
            <origin>0.5 0</origin>
            <pos>0.25 0.615</pos>
            <size>0.23 0.20</size>
            <fontSize>0.024</fontSize>
            <fontPath>./_inc/fonts/Oxygen-Regular.ttf</fontPath>
            <text>${systemDescription}</text>
            <verticalAlignment>top</verticalAlignment>
            <alignment>center</alignment>
            <autoScroll>vertical</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>5000</autoScrollDelay>
            <color>${systemInfoColor}</color>
            <zIndex>15</zIndex>
        </text>
        <helpsystem name="help">
            <origin>0 0</origin>
            <pos>0.48 0.965</pos>
            <fontSize>0.022</fontSize>
            <textColor>${helpTextColor}</textColor>
            <iconColor>${helpIconColor}</iconColor>
            <fontPath>./_inc/fonts/Gilroy-Regular.ttf</fontPath>
        </helpsystem>
    </view>
    <view name="basic"></view>
    <view name="detailed"></view>
    <view name="video"></view>
</theme>
