<theme>
    <formatVersion>7</formatVersion>
    <include>./_inc/metadata/_default.xml</include>
    <include>./_inc/metadata/${system.theme}.xml</include>
    <view name="screen">
        <controllerActivity name="controllerActivity">
            <visible>false</visible>
        </controllerActivity>
        <batteryIndicator name="batteryIndicator">
            <visible>false</visible>
        </batteryIndicator>
        <text name="clock">
            <pos>1 1</pos>
        </text>
    </view>
    <view name="system,basic,detailed">
        <stackpanel name="system-indicators" extra="true">
            <h>0.022</h>
            <pos>-0.01 0.9615</pos>
            <orientation>horizontal</orientation>
            <reverse>true</reverse>
            <clock name="system-clock">
                <color>11111199</color>
                <fontSize>0.022</fontSize>
                <lineSpacing>1</lineSpacing>
                <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
            </clock>
            <batteryText name="system-battery-text">
                <color>111111b3</color>
                <fontSize>0.022</fontSize>
                <lineSpacing>1</lineSpacing>
                <fontPath>./_inc/fonts/Gilroy-Regular.ttf</fontPath>
            </batteryText>
            <batteryIcon name="system-battery-icon">
                <maxSize>1 1</maxSize>
                <color>54585ab3</color>
                <full>./_inc/other/battery-icon-100.svg</full>
                <at75>./_inc/other/battery-icon-75.svg</at75>
                <at50>./_inc/other/battery-icon-50.svg</at50>
                <at25>./_inc/other/battery-icon-25.svg</at25>
                <empty>./_inc/other/battery-icon-0.svg</empty>
                <incharge>./_inc/other/battery-icon-charging.svg</incharge>
            </batteryIcon>
            <networkIcon name="system-network-icon">
                <maxSize>1 1</maxSize>
                <color>54585ab3</color>
                <networkIcon>./_inc/other/network-icon-on.svg</networkIcon>
                <planemodeIcon>./_inc/other/network-icon-off.svg</planemodeIcon>
            </networkIcon>
        </stackpanel>
    </view>
    <view name="system">
        <stackpanel name="system-indicators" extra="true">
            <w>1</w>
            <separator>0.012</separator>
            <zIndex>100</zIndex>
        </stackpanel>
    </view>
    <view name="system">
        <carousel name="systemcarousel">
            <type>horizontal</type>
            <origin>0 1</origin>
            <pos>0 1</pos>
            <size>1 0.2</size>
            <logoSize>0.2 0.2</logoSize>
            <color>00000000</color>
            <colorEnd>00000000</colorEnd>
            <gradientType>vertical</gradientType>
            <logoScale>1.6</logoScale>
            <minLogoOpacity>0.5</minLogoOpacity>
            <maxLogoCount>4</maxLogoCount>
            <logoPos>0.15 0</logoPos>
            <systemInfoDelay>0</systemInfoDelay>
            <defaultTransition>instant</defaultTransition>
            <fontSize>0.024</fontSize>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
        </carousel>
        <image name="background-art" extra="true">
            <default>./_inc/system-background-art/_default.webp</default>
            <path>./_inc/system-background-art/${system.theme}.webp</path>
            <size>1 1</size>
        </image>
        <image name="background-art-gradient" extra="true">
            <path>./_inc/other/background-art-gradient-light.svg</path>
            <pos>0 0.82</pos>
            <size>1 0.22</size>
            <origin>0 0</origin>
            <color>FFFFFFFF</color>
            <zIndex>20</zIndex>
        </image>
        <image name="logo">
            <path>./_inc/system-logo/${system.theme}.webp</path>
        </image>
        <text name="logoText">
            <forceUppercase>true</forceUppercase>
            <fontSize>0.045</fontSize>
            <fontPath>./_inc/fonts/Oxygen-Regular.ttf</fontPath>
        </text>
        <image name="system-image" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.25 .23</pos>
            <size>.24 0</size>
            <default>./_inc/controllers/_default.webp</default>
            <path>./_inc/controllers/${system.theme}.webp</path>
            <zIndex>15</zIndex>
        </image>
        <image name="system-carousel-selector-shadow" extra="true">
            <origin>0.5 0</origin>
            <pos>0.25 -.1</pos>
            <size>0.280 1.1</size>
            <path>./_inc/other/system-carousel-selector-shadow.png</path>
            <zindex>2</zindex>
        </image>
        <image name="system-carousel-selector" extra="true">
            <origin>0.5 0</origin>
            <pos>0.25 0</pos>
            <size>0.261 1</size>
            <path>./_inc/other/system-carousel-selector-light.svg</path>
            <zindex>3</zindex>
        </image>
        <text name="system-name" extra="true">
            <text>${systemName}</text>
            <origin>0.5 0.5</origin>
            <pos>0.25 0.478</pos>
            <fontSize>0.036777777777778</fontSize>
            <alignment>center</alignment>
            <forceUppercase>true</forceUppercase>
            <color>54585a</color>
            <zIndex>15</zIndex>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
        </text>
        <text name="systemInfo">
            <origin>0.5 0.5</origin>
            <pos>0.25 0.586</pos>
            <size>0.390625 0.024</size>
            <fontSize>0.024</fontSize>
            <color>a0a0a0</color>
            <alignment>center</alignment>
            <lineSpacing>1</lineSpacing>
            <forceUppercase>true</forceUppercase>
            <zIndex>15</zIndex>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
        </text>
        <text name="system-year-type" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.25 0.518</pos>
            <fontSize>0.024</fontSize>
            <text>${systemReleaseYear} Â· ${systemHardwareType}</text>
            <alignment>center</alignment>
            <forceUppercase>true</forceUppercase>
            <color>54585a</color>
            <zIndex>15</zIndex>
            <fontPath>./_inc/fonts/Gilroy-Bold.ttf</fontPath>
        </text>
        <text name="system-description" extra="true">
            <origin>0.5 0</origin>
            <pos>0.25 0.615</pos>
            <size>0.23 0.20</size>
            <fontSize>0.024</fontSize>
            <fontPath>./_inc/fonts/Oxygen-Regular.ttf</fontPath>
            <text>${systemDescription}</text>
            <verticalAlignment>top</verticalAlignment>
            <alignment>center</alignment>
            <autoScroll>vertical</autoScroll>
            <autoScrollSpeed>50</autoScrollSpeed>
            <autoScrollDelay>5000</autoScrollDelay>
            <color>54585a</color>
            <zIndex>15</zIndex>
        </text>
        <helpsystem name="help">
            <origin>1 1</origin>
            <pos>0.805 0.985</pos>
            <fontSize>0.022</fontSize>
            <textColor>111111b3</textColor>
            <iconColor>54585ab3</iconColor>
            <fontPath>./_inc/fonts/Gilroy-Regular.ttf</fontPath>
        </helpsystem>
    </view>
    <view name="basic"></view>
    <view name="detailed"></view>
    <view name="video"></view>
</theme>
